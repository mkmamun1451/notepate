<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteDetilsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dttoolfb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#B5B8FD">

        <TextView
            android:id="@+id/detittitl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title Displayed"
            android:paddingTop="12dp"
            android:textSize="25dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/contentEtdt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dttoolfb"
        android:background="#A38F7171"
        android:gravity="top|left"
        android:hint="Enter Your Note Content"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detfloabttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="#A1F4Fb"
        android:src="@drawable/ic_edit_24"
        app:maxImageSize="56dp" />

</RelativeLayout>